{
    "name": "fido/php-xray",
    "description": "A basic PHP instrumentation library for AWS X-Ray",
    "keywords": ["AWS", "X-Ray", "AWS X-Ray", "APM", "Tracing"],
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Francesco Panina",
            "email": "francesco.panina@gmail.com"
        },
        {
            "name": "Mauro Artizzu",
            "email": "mauro@fido.id"
        }
    ],

    "require": {
        "php": ">=7.0",
        "ext-json": "*",
        "ext-sockets": "*"
    },

    "autoload": {
        "psr-4": {"Fido\\PHPXray\\": "src/"}
    },

    "autoload-dev": {
        "psr-4": {"Fido\\PHPXray\\": "tests/"}
    },

    "require-dev": {
        "phpunit/phpunit": "^6.2"
    }
}
